<% layout("layouts/boilerplate.ejs")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br />
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">
            <i class="fa-solid fa-at"></i>
          </span>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add catchy title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
          <div class="invalid-feedback">Add Title!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>

        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          rows="2"
          required
        ></textarea>
        <div class="invalid-feedback">Add Short description!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image </label>

        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1"
              ><i class="fa-solid fa-indian-rupee-sign"></i
            ></span>

            <input
              type="text"
              name="listing[price]"
              placeholder="â‚¹ 1220"
              class="form-control"
              required
            />
            <span class="input-group-text">.00</span>
            <div class="invalid-feedback">Add valid Price!</div>
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1"
              ><i class="fa-solid fa-earth-asia"></i
            ></span>
            <input
              type="text"
              name="listing[country]"
              placeholder="Ex...INDIA"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Add valid Country!</div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">
            <i class="fa-solid fa-location-dot"></i>
          </span>
          <input
            type="text"
            name="listing[location]"
            placeholder="Ex...Deoria,U.P"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Add valid Location!</div>
        </div>
      </div>

      <button class="btn btn-dark mb-3 add-btn mt-3">Add</button>
    </form>
  </div>
</div>
