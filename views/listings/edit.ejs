<% layout("layouts/boilerplate.ejs")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form
        method="post"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1"
              ><i class="fa-solid fa-at"></i
            ></span>
            <input
              type="text"
              name="listing[title]"
              value="<%=listing.title%>"
              class="form-control"
              required
            />
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Add Title!</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>

          <textarea
            name="listing[description]"
            class="form-control"
            rows="1"
            required
          >
             <%=listing.description%>
             </textarea
          >
          <div class="invalid-feedback">Add Short description!!</div>
        </div>

        <div class="mb-3">
          Orignal Image <br />
          <img src="<%= originalImageUrl  %>" alt="" />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image </label>
          <input type="file" name="listing[image]" class="form-control" />
          <div class="invalid-feedback">Add valid Image !!</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1"
                ><i class="fa-solid fa-indian-rupee-sign"></i></span
              ><input
                type="text"
                name="listing[price]"
                value="<%=listing.price%>"
                class="form-control"
                required
              />
              <span class="input-group-text">.00</span>
              <div class="invalid-feedback">Add valid Price!</div>
            </div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1"
                ><i class="fa-solid fa-earth-asia"></i
              ></span>
              <input
                type="text"
                name="listing[country]"
                value="<%=listing.country%>"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Add valid Country!</div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">
              <i class="fa-solid fa-location-dot"></i> </span
            ><input
              type="text"
              name="listing[location]"
              value="<%=listing.location%>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Add valid Location!</div>
          </div>
        </div>

        <button class="btn btn-dark mb-3 edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
